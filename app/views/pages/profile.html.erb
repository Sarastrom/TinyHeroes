    <%= image_tag current_user.avatar, height: 150, width: 150, crop: :fill %>
    <% else %>
    <%= image_tag ("default.png"), height: 150, width: 150, crop: :fill %>
    <% end %> <br>


    <%= link_to 'Edit Profile', edit_user_registration_path, class:"EditProfile"%> <br>
    <%= link_to 'Dashboard', missions_path, class:"Dashboard"%> <br>
    <%= link_to 'Wish List', user_wish_list_path(current_user), class:"WishList"%>


  </div>
</div>
